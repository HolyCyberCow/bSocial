{
  "name": "bsocial",
  "version": "0.1.2",
  "description": "A simple social app",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc -p .",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "start": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "fl": "npm run format && npm run lint",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/utils/db.ts",
    "migration": "npm run build:clean && npm run typeorm",
    "migration:generate": "npm run migration -- migration:generate",
    "migration:run": "npm run migration -- migration:run",
    "migration:revert": "npm run migration -- migration:revert"
  },
  "keywords": [
    "social",
    "bsocial"
  ],
  "author": "HolyCyberCow <andrej.karakas@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/kafkajs": "^1.9.0",
    "@types/node": "^20.6.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
